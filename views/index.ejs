<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      a {
        text-decoration: none;
      }
    </style>
    <title>Shark</title>
  </head>
  <body>
    <div class="container-fluid p-4 bg-primary text-white text-center">
      <h2>Url Shortner</h2>
      <p>Shark ðŸš€</p>
    </div>
    <div class="container mt-5 col-sm-6 text-center">
      <form action="/shortUrls" method="post">
        <div class="row align-items-center">
          <input
            type="url"
            required
            name="fullUrl"
            id="fullUrl"
            class="form-control px-4 p-2"
            placeholder="Enter Url"
          />
        </div>
        <button type="submit" class="btn btn-primary col-sm-4 m-3 p-2">
          Shrink
        </button>
      </form>
    </div>
    <div class="container col-sm-8 mt-4">
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full Url</th>
            <th>Short Url</th>
            <th>Number of Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl=>{ %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
            </td>
            <td>
              <a target="_blank" href="<%= shortUrl.short %>"
                ><%= shortUrl.short %></a
              >
            </td>
            <td><%= shortUrl.click %></td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </body>
</html>
